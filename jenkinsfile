pipeline {
  agent any
  stages {

    stage('NPM install') {
      steps {
        script {
          bat 'npm install'
        }
      }
    }

    stage('Lint') {
      steps {
        script {
          bat 'npm run lint'
        }
      }
    }

    stage('Run tests') {
      steps {
        script {
          bat 'npm run test'
        }
      }
    }

    stage('Compile & minify for production') {
      steps {
        script {
          bat 'npm run build'
        }
      }
    }

  }
  
  post {
    always {
      script {
        echo 'Done'
      }
    }
    success {
      script {
        echo 'Yay!'
		archiveArtifacts artifacts: '.\\dist\\**\\*.*', followSymlinks: false
      }
    }
    failure {
      script {
        echo 'Oops! I should let someone know about this!'
      }
    }
  }
  
}